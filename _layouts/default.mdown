        .cursor,
        .cursor2,
        .cursor3{
            position: fixed;
            border-radius: 50%;	
            transform: translateX(-40%) translateY(-40%);
            pointer-events: none;
            left: -100px;
            top: 50%;
            mix-blend-mode: difference;
            -webkit-transition: all 200ms linear;
            transition: all 200ms linear;
        }
        .cursor{
            background-color: #fff;
            height: 0;
            width: 0;
